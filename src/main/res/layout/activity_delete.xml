<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delete.DeleteActivity"
    android:background="@color/transparent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logo_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/delete_icon"
            android:transitionName="basura"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/auxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_delete"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:text="@string/estas_seguro"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/title_tv"
            android:layout_below="@+id/auxx"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            tools:text="Title 1"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:transitionName="title_shared"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="2">
            <RelativeLayout
                android:id="@+id/btn_yes"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="#baffc9"
                android:layout_weight="1"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="YES"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_no"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffb3ba"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="NO"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>